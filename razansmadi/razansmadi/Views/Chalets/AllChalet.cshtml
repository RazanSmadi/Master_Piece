@model Tuple<List<razansmadi.Models.Chalet>, List<razansmadi.Models.Category>, List<string>, List<string>>

@{
    Layout = null;
}
@using razansmadi.Models

<!DOCTYPE html>
<html lang="zxx">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="Aler Template">
    <meta name="keywords" content="Aler, unica, creative, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Aler | Template</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500,600,700,800,900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700,900&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Babylonica&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <!-- Css Styles -->
    <link rel="stylesheet" href="~/template/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="~/template/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="~/template/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="~/template/css/elegant-icons.css" type="text/css">
    <link rel="stylesheet" href="~/template/css/jquery-ui.min.css" type="text/css">
    <link rel="stylesheet" href="~/template/css/nice-select.css" type="text/css">
    <link rel="stylesheet" href="~/template/css/owl.carousel.min.css" type="text/css">
    <link rel="stylesheet" href="~/template/css/magnific-popup.css" type="text/css">
    <link rel="stylesheet" href="~/template/css/slicknav.min.css" type="text/css">
    <link rel="stylesheet" href="~/template/css/style.css" type="text/css">
    <script src="https://kit.fontawesome.com/a8b56cb52b.js" crossorigin="anonymous"></script>
</head>

<body>


    <!-- Offcanvas Menu Wrapper Begin -->
    <div class="offcanvas-menu-overlay"></div>
    <div class="offcanvas-menu-wrapper">
        <div class="canvas-close">
            <span class="icon_close"></span>
        </div>
        <div class="logo">
            <a href="./index.html">
                <span style="font-family: 'Babylonica', cursive;font-weight: bolder;font-size:35px;color:#053503;">Royal Chalets</span>
            </a>
        </div>
        <div id="mobile-menu-wrap"></div>
        <div class="om-social">
            <a href="#"><i class="fa fa-facebook"></i></a>
            <a href="#"><i class="fa fa-twitter"></i></a>
            <a href="#"><i class="fa fa-instagram"></i></a>
        </div>
    </div>
    <!-- Offcanvas Menu Wrapper End -->
    <!-- Header Section Begin -->
    <header class="header-section">
        <nav class="navbar navbar-expand-lg ">
            <div class="container-fluid">
                <span style="font-family: 'Babylonica', cursive;font-weight: bolder;font-size:30px;color:#053503;">Royal Chalets</span>

                <button class="navbar-toggler  d-lg-none  d-sm-block" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation" style="color: #0A6506; display: flex; justify-content: center;">
                    <i class="fa-solid fa-bars"></i>
                </button>

                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <div class="navbar-nav">
                        <a href="./index.html" class="nav-link" style="color: #0A6506; ">Home</a>
                        <a href="./Our Chalets.html" class="nav-link" style="color: #0A6506; border-bottom: 2px solid #0A6506;">Chalets</a>
                        <a href="./profile.html" class="nav-link" style="color: #0A6506;">Profile</a>
                        <a href="./about.html" class="nav-link" style="color: #0A6506;">About</a>
                        <a href="./contact.html" class="nav-link" style="color: #0A6506;">Contact</a>
                        @Html.Partial("_LoginPartial")
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <!-- Header End -->
    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-section spad set-bg" data-setbg="@Url.Content("~/img/beautiful-park.jpg")">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb-text">
                        <h4>Our Chalets</h4>
                        <div class="bt-option">
                            <a href="./index.html"><i class="fa fa-home"></i> Home</a>
                            <span>Chalets</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->
    <!-- Property Section Begin -->
    <section class="property-section spad">
        <div class="container">

            <!-- Search Section Begin -->
            <section class="search-section spad">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-7">
                            <div class="section-title">
                                <h4>Enjoy the beauty of Jerash's nature!</h4>
                            </div>
                        </div>
                    </div>

                    <form action="@Url.Action("AllChalet", "Chalets")" method="get" class="filter-form">

                        <div class="d-flex justify-content-around">
                            <select class="sm-width col-4" name="sortOrder" style="justify-content:space-between">
                                <option value="priceDesc">Price From High To Low</option>
                                <option value="priceAsc">Price From Low To High</option>
                            </select>
                            <select class="col-2 " name="address" style="justify-content:space-between">
                                <option value="">All Addresses</option>
                                @foreach (var address in ViewBag.AddressList)
                                {
                                    <option value="@address">@address</option>
                                }
                            </select>

                            <select class="col-2" name="category" style="justify-content:space-between">
                                <option value="">All Categories</option>
                                @foreach (var category in ViewBag.CategoryList)
                                {
                                    <option value="@category">@category</option>
                                }
                            </select>



                            <button type="submit" class="btn btn-success col-2">Search</button>

                        </div>

                    </form>


                </div>


            </section>


            <!-- Search Section End -->
            <!-- Property Section start -->

            <div class="row">
                @foreach (var item in Model.Item1)
                {

                    var db = new MasterPieceEntities();
                    var Image = db.Images.Where(i => i.Images_ID == item.Images_ID).ToList();
                   

                    <div class="col-lg-4 col-md-6 mix all house">
                        <div class="property-item">
                            @foreach (var img in Image)
                            {
                             <img src="~/img/MainImage/@img.MainImage" class="pi-pic set-bg"  />
                            }

                            <div class="pi-text">
                                <a href="#" class="heart-icon"><span class="icon_heart_alt"></span></a>
                                <div class="pt-price">Start From @item.PricePerNight JD /Day </div>
                                <h5><a href="#">@item.Chalet_Name</a></h5>
                                <p><span class="icon_pin_alt"></span> @item.Chalet_Address</p>
                                <ul>
                                    <li><i class="fa fa-object-group"></i> @item.area</li>
                                    <li><i class="fa fa-bathtub"></i> @item.bathroom</li>
                                    <li><i class="fa fa-bed"></i> @item.bedroom</li>
                                    <li><i class="fa fa-automobile"></i> 3</li>
                                </ul>
                                <div class="pi-agent">
                                    <div class="pa-item">
                                        <div class="pa-info">
                                            <img src="img/property/posted-by/pb-1.jpg" alt="">

                                            <h6>Razan</h6>
                                        </div>
                                        <div class="pa-text">
                                            0772267702
                                        </div>
                                    </div>
                                    <br>
                                    <a href="@Url.Action("ChaletDetails", "Chalets", new { id = item.ChaletID })" class="button_header">View More Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
    <!-- Property Section End -->
    <!-- Footer Section Begin -->
    <footer class="footer-section">
        <div class="container">
            <div class="d-flex justify-content-between ">
                <div class="col-lg-4 col-md-6">
                    <div class="fs-about">
                        <div class="fs-logo">
                            <a href="#">
                                <span style="font-family: 'Babylonica', cursive;font-weight: bolder;font-size:70px;color:#053503;">Royal Chalets</span>
                            </a>
                        </div>
                        <p>
                            Comfortable and convenient to Enjoy the beauty of Jerash's stunning nature
                        </p>
                        <div class="fs-social">
                            <a href="#"><i class="fa fa-facebook"></i></a>
                            <a href="#"><i class="fa fa-twitter"></i></a>
                            <a href="#"><i class="fa fa-instagram"></i></a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 d-none d-md-block">
                    <div class="fs-widget">
                        <h5>Links</h5>
                        <div class="d-flex">
                            <ul class="col-6">
                                <li><a href="#">Contact us</a></li>
                                <li><a href="#">About us</a></li>
                                <li><a href="#">Register</a></li>
                            </ul>
                            <ul class="col-6">
                                <li><a href="#">All Chalets</a></li>
                                <li><a href="#">Rent your Chalets</a></li>
                                <li><a href="#">Login</a></li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="d-block d-sm-none">
                    <div class="fs-widget">
                        <h5 class="d-flex justify-content-center">Links</h5>
                        <div class="d-flex">
                            <ul class="col-6">
                                <li><a href="#">Contact</a></li>
                                <li><a href="#">About</a></li>
                                <li><a href="#">Register</a></li>
                                <li><a href="#">Chalets</a></li>
                                <li><a href="#">Login</a></li>
                            </ul>
                        </div>
                    </div>
                </div>

            </div>
            <div class="copyright-text">
                <p>
                    <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                    Copyright &copy;
                    <script>document.write(new Date().getFullYear());</script> All rights reserved.
                    <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                </p>
            </div>
        </div>
    </footer>
    <!-- Footer Section End -->
    <!-- Js Plugins -->
    <script src="~/template/js/jquery-3.3.1.min.js"></script>
    <script src="~/template/js/bootstrap.min.js"></script>
    <script src="~/template/js/jquery.magnific-popup.min.js"></script>
    <script src="~/template/js/mixitup.min.js"></script>
    <script src="~/template/js/jquery-ui.min.js"></script>
    <script src="~/template/js/jquery.nice-select.min.js"></script>
    <script src="~/template/js/jquery.slicknav.js"></script>
    <script src="~/template/js/owl.carousel.min.js"></script>
    <script src="~/template/js/jquery.richtext.min.js"></script>
    <script src="~/template/js/image-uploader.min.js"></script>
    <script src="~/template/js/main.js"></script>
</body>

</html>
