@model razansmadi.Models.Image

@{
    Layout = "~/Views/Shared/_OwnersLayout.cshtml";
}
<!DOCTYPE html>
<div class="page-wrapper">
    <div class="content container-fluid">
        <div class="page-header">
            <div class="row">
                <div class="col-sm-12">
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item active"> Edit Imges</li>
                    </ul>
                </div>
            </div>
        </div>
        @using (Html.BeginForm("Edit", "Images", FormMethod.Post, new { role = "form", enctype = "multipart/form-data" }))
        {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                   

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Images_ID)

                    <div class="form-group">
                        Main Image
                        <div class="col-md-10">
                            <input type="file" class="form-control" id="MainImage" name="MainImage" accept="image/*">


                        </div>
                    </div>

                    <div class="form-group">
                        Pool Image
                        <div class="col-md-10">

                            <input type="file" class="form-control" id="poolImage" name="poolImage" accept="image/*">

                        </div>
                    </div>


                    <div class="form-group">
                        garden Image
                        <div class="col-md-10">
                            <input type="file" class="form-control" id="gardenImage" name="gardenImage" accept="image/*">

                        </div>
                    </div>
                    <div class="form-group">
                        playGround Image
                        <div class="col-md-10">

                            <input type="file" class="form-control" id="playGroundImage" name="playGroundImage" accept="image/*">

                        </div>
                    </div>
                    <div class="form-group">
                        Room Image
                        <div class="col-md-10">

                            <input type="file" class="form-control" id="roomImage" name="roomImage" accept="image/*">

                        </div>
                    </div>

                    <div class="form-group">
                        kitchen Image
                        <div class="col-md-10">

                            <input type="file" class="form-control" id="kitchenImage" name="kitchenImage" accept="image/*">

                        </div>
                    </div>

                    <div class="form-group">
                        living Room Image
                        <div class="col-md-10">

                            <input type="file" class="form-control" id="livingRoomImage" name="livingRoomImage" accept="image/*">

                        </div>
                    </div>

                    <div class="form-group">
                        bathroom Image
                        <div class="col-md-10">

                            <input type="file" class="form-control" id="bathroomImage" name="bathroomImage" accept="image/*">

                        </div>
                    </div>

                    <div class="form-group">
                        view Image
                        <div class="col-md-10">

                            <input type="file" class="form-control" id="viewImage" name="viewImage" accept="image/*">

                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <a href="~/Images/OwnerAllImages/@Model.Images_ID" class="btn btn-secondary p-2">Cancel</a>
                            &nbsp; &nbsp;
                            <input type="submit" value="Save" class="btn btn-success p-2" />
                        </div>
                    </div>
                </div>
            }


        </div>
</div>