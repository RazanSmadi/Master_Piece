    <!-- Header Section Begin -->
    <header class="header-section">
        <div class="hs-top">
            <div class="container">
                <div class="row">
                    <div class="col-lg-2">
                        <div class="logo">
                            <span style="font-family: 'Babylonica', cursive;font-weight: bolder;font-size:30px;color:#053503;">Royal Chalets</span>
                        </div>
                    </div>
                    <div class="col-lg-10">
                        <div class="ht-widget">
                            <ul>
                                <li><i class="icon_mail_alt"></i>Royal@gmail.com</li>
                                <li><i class="fa fa-mobile-phone"></i>0778589292</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="canvas-open">
                    <span class="icon_menu"></span>
                </div>
            </div>
        </div>
        <div class="hs-nav">
            <div class="container">
                <div class="row">
                    <div class="col-lg-9">
                        <nav class="nav-menu">
                            <ul>
                                <li><a href="./index.html">Home</a></li>
                                <li class="active"><a href="./Our Chalets.html">Chalets</a></li>
                                <li><a href="./profile.html">Profile</a></li>
                                <li><a href="./property-comparison.html">comparison</a></li>
                                <li><a href="./about.html">About</a></li>
                                <li><a href="./contact.html">Contact</a></li>
                            </ul>
                        </nav>
                    </div>
                    <div class="col-lg-3">
                        <div class="hn-social">
                            <a href="#"><i class="fa fa-facebook"></i></a>
                            <a href="#"><i class="fa fa-twitter"></i></a>
                            <a href="#"><i class="fa fa-instagram"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- Header End -->
    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-section spad set-bg" data-setbg="@Url.Content("~/img/beautiful-park.jpg")">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb-text">
                        <h4>Our Chalets</h4>
                        <div class="bt-option">
                            <a href="./index.html"><i class="fa fa-home"></i> Home</a>
                            <span>Chalets</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->
    <!-- Property Section Begin -->
    <section class="property-section spad">
        <div class="container">

            <!-- Search Section Begin -->
            <section class="search-section spad">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-7">
                            <div class="section-title">
                                <h4>Enjoy the beauty of Jerash's nature!</h4>
                            </div>
                        </div>
                    </div>
                 
                            <form action="@Url.Action("AllChalet", "Chalets")" method="get" class="filter-form">
                           
                                <div class="d-flex justify-content-between">
                                    <select class="sm-width col-4" name="sortOrder" style="justify-content:space-between">
                                        <option value="priceDesc">Price From High To Low</option>
                                        <option value="priceAsc">Price From Low To High</option>
                                    </select>

                                    <select class="col-3" name="address" style="justify-content:space-between">
                                        <option value="Address">Address</option>

                                        @foreach (var address in ViewBag.AddressList)
                                        {
                                            <option value="@address">@address</option>
                                        }
                                    </select>

                                    <button type="submit" class="btn btn-success col-2">Search</button>

                                </div>
                              
                            </form>
                      

                </div>


            </section>


            <!-- Search Section End -->
            <!-- Property Section start -->

            <div class="row">
                @foreach (var item in Model.Item1)
                {
                    <div class="col-lg-4 col-md-6 mix all house">
                        <div class="property-item">
                            <div class="pi-pic set-bg" data-setbg="img/northfarm/kijgc.jpg">

                            </div>
                            <div class="pi-text">
                                <a href="#" class="heart-icon"><span class="icon_heart_alt"></span></a>
                                <div class="pt-price">Start From @item.PricePerNight JD /Day </div>
                                <h5><a href="#">@item.Chalet_Name</a></h5>
                                <p><span class="icon_pin_alt"></span> @item.Chalet_Address</p>
                                <ul>
                                    <li><i class="fa fa-object-group"></i> @item.area</li>
                                    <li><i class="fa fa-bathtub"></i> @item.bathroom</li>
                                    <li><i class="fa fa-bed"></i> @item.bedroom</li>
                                    <li><i class="fa fa-automobile"></i> 3</li>
                                </ul>
                                <div class="pi-agent">
                                    <div class="pa-item">
                                        <div class="pa-info">
                                            <img src="img/property/posted-by/pb-1.jpg" alt="">

                                            <h6>Razan</h6>
                                        </div>
                                        <div class="pa-text">
                                            0772267702
                                        </div>
                                    </div>
                                    <br>
                                    <a href="@Url.Action("ChaletDetails", "Chalets", new { id = item.ChaletID })" class="button_header">View More Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
    <!-- Property Section End -->
    <!-- Footer Section Begin -->
    <footer class="footer-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6">
                    <div class="fs-about">
                        <div class="fs-logo">
                            <a href="#">
                                <span style="font-family: 'Babylonica', cursive;font-weight: bolder;font-size:70px;color:#053503;">Royal Chalets</span>
                            </a>
                        </div>
                        <p>
                            Comfortable and convenient to Enjoy the beauty of Jerash's stunning nature
                        </p>
                        <div class="fs-social">
                            <a href="#"><i class="fa fa-facebook"></i></a>
                            <a href="#"><i class="fa fa-twitter"></i></a>
                            <a href="#"><i class="fa fa-youtube-play"></i></a>
                            <a href="#"><i class="fa fa-instagram"></i></a>
                            <a href="#"><i class="fa fa-pinterest-p"></i></a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-2 col-sm-6">
                    <div class="fs-widget">
                        <h5>Help</h5>
                        <ul>
                            <li><a href="#">Privacy Policy</a></li>
                            <li><a href="#">Contact Support</a></li>
                            <li><a href="#">Knowledgebase</a></li>
                            <li><a href="#">Careers</a></li>
                            <li><a href="#">FAQs</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-2 col-sm-6">
                    <div class="fs-widget">
                        <h5>Links</h5>
                        <ul>
                            <li><a href="#">Contact</a></li>
                            <li><a href="#">Create Property</a></li>
                            <li><a href="#">My Properties</a></li>
                            <li><a href="#">Register</a></li>
                            <li><a href="#">Login</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="fs-widget">
                        <h5>Newsletter</h5>
                        <p>Deserunt mollit anim id est laborum.</p>
                        <form action="#" class="subscribe-form">
                            <input type="text" placeholder="Email">
                            <button type="submit" class="site-btn">Subscribe</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="copyright-text">
                <p>
                    <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                    Copyright &copy;
                    <script>document.write(new Date().getFullYear());</script> All rights reserved.
                    <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                </p>
            </div>
        </div>
    </footer>
