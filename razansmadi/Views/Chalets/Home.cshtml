            <div class="hs-slider owl-carousel">
                <div class="hs-item set-bg" data-setbg="@Url.Content("~/img/Category/family.jpg")"></div>
                <div class="hs-item set-bg" data-setbg="@Url.Content("~/img/farm2.PNG")"></div>
                <div class="hs-item set-bg" data-setbg="@Url.Content("~/img/Capture.PNG")"></div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div style="display:flex;justify-content:center">
                        @using (Html.BeginForm("AllChalet", "Chalets", FormMethod.Post))
                        {
                            <button class="button_header">Our Chalets</button>
                        }
                        @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                        {
                            <button class="button_header">Renting your Chalets</button>
                        }
                    </div>
                </div>
            </div>
        </div>
