                                <div class="pt-price">Start From @item.PricePerNight JD /Day </div>
                                <h5><a href="#">@item.Chalet_Name</a></h5>
                                <p><span class="icon_pin_alt"></span> @item.Chalet_Address</p>
                                <ul>
                                    <li><i class="fa fa-object-group"></i> @item.area</li>
                                    <li><i class="fa fa-bathtub"></i> @item.bathroom</li>
                                    <li><i class="fa fa-bed"></i> @item.bedroom</li>
                                    
