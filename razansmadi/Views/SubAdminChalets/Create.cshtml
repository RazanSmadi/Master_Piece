@model razansmadi.Models.Chalet
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_OwnersLayout.cshtml";
}
<div class="page-wrapper">
    <div class="content container-fluid">
        <div class="page-header">
            <div class="row">
                <div class="col-sm-12">
                    <h3 class="page-title">Create</h3>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item active"><a href="index.html">Create New Chalet</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        @using (Html.BeginForm(new { id = "myForm" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(model => model.userid)

                            <div class="form-group">
                                Chalet Name
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Chalet_Name, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Chalet_Name, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                Description
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Chalet_Description, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Chalet_Description, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                Address
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Chalet_Address, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Chalet_Address, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                Nnmber Of Adult
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.NnmberOfAdult, new { htmlAttributes = new { @class = "form-control", min = 1 } })
                                    @Html.ValidationMessageFor(model => model.NnmberOfAdult, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                Nnmber Of kid
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.NnmberOfkid, new { htmlAttributes = new { @class = "form-control", min = 0 } })
                                    @Html.ValidationMessageFor(model => model.NnmberOfkid, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                Price Per Night
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.PricePerNight, new { htmlAttributes = new { @class = "form-control", min = 10 } })
                                    @Html.ValidationMessageFor(model => model.PricePerNight, "", new { @class = "text-danger" })
                                </div>
                            </div>


                            <div class="form-group">
                                bedroom
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.bedroom, new { htmlAttributes = new { @class = "form-control", min = 1 } })
                                    @Html.ValidationMessageFor(model => model.bedroom, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                bathroom
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.bathroom, new { htmlAttributes = new { @class = "form-control", min = 1 } })
                                    @Html.ValidationMessageFor(model => model.bathroom, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                area
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.area, new { htmlAttributes = new { @class = "form-control", min = 100 } })
                                    @Html.ValidationMessageFor(model => model.area, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                Map
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.map, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.map, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-10">
                                    <a href="~/Images/Create">Submit Chalete Detalis </a>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-10">
                                    <a href="~/Images/Create" onclick="saveFormData()">Add Images For Your Chalet</a>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-10 form-group">
                                    <a href="~/Features/Create" onclick="saveFormData()">Add Features For Your Chalet</a>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Create" class="btn btn-default" />
                                </div>
                            </div>

                            <a href="~/SubAdminChalets/Index">Back to list</a>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
const myForm = document.getElementById('myForm');
myForm.addEventListener('submit', function (event) {
event.preventDefault(); // prevent form submission to server
        // save form inputs to local storage
        localStorage.setItem('chalet_name', myForm.elements.chalet_name.value);
        localStorage.setItem('location', myForm.elements.location.value);
        localStorage.setItem('Chalet_Description', myForm.elements.Chalet_Description.value);
        localStorage.setItem('NnmberOfAdult', myForm.elements.NnmberOfAdult.value);
        localStorage.setItem('map', myForm.elements.map.value);
        localStorage.setItem('area', myForm.elements.area.value);
        localStorage.setItem('bathroom', myForm.elements.bathroom.value);
        localStorage.setItem('bedroom', myForm.elements.bedroom.value);
        localStorage.setItem('PricePerNight', myForm.elements.PricePerNight.value);
        localStorage.setItem('NnmberOfkid', myForm.elements.NnmberOfkid.value);

        window.location.href = '/Features/Create';
        window.location.href = '/Images/Create';
    });
    // set input values from local storage when page loads
    myForm.elements.chalet_name.value = localStorage.getItem('chalet_name');
    myForm.elements.location.value = localStorage.getItem('location');
    myForm.elements.Chalet_Description.value = localStorage.getItem('Chalet_Description');
    myForm.elements.NnmberOfAdult.value = localStorage.getItem('NnmberOfAdult');
    myForm.elements.map.value = localStorage.getItem('map');
    myForm.elements.area.value = localStorage.getItem('area');
    myForm.elements.bathroom.value = localStorage.getItem('bathroom');
    myForm.elements.bedroom.value = localStorage.getItem('bedroom');
    myForm.elements.PricePerNight.value = localStorage.getItem('PricePerNight');
    myForm.elements.NnmberOfkid.value = localStorage.getItem('NnmberOfkid');
</script>

